@model CashierSystem.Models.SaleDetail

@{
    ViewData["Title"] = "Create";
}

<div class="card">
    <div class="card-header">
        <h1 class="text-center pb-3">Sales Details</h1>
        <h4 class="text-center pb-3">Create</h4>
    </div>
    <div ng-app="" class="row card-body justify-content-center">
        <div class="col-md-4">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group mb-3">
                    <label asp-for="SaleId" class="control-label"></label>
                    <select asp-for="SaleId" class ="form-control" asp-items="ViewBag.SaleId"></select>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="ProductId" class="control-label"></label>
                    <select asp-for="ProductId" class ="form-control" asp-items="ViewBag.ProductId"></select>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="Quantity" class="control-label"></label>
                    <input asp-for="Quantity" ng-model="Quantity" class="form-control" />
                    <span asp-validation-for="Quantity" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="UnitPrice" class="control-label"></label>
                    <input asp-for="UnitPrice" step="0.01" ng-model="UnitPrice" class="form-control" />
                    <span asp-validation-for="UnitPrice" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="Total" class="control-label"></label>
                    <input asp-for="Total" value="{{Quantity * UnitPrice || 0 }}" readonly class="form-control" />
                    <span asp-validation-for="Total" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <input type="submit" value="Create" class="btn btn-primary" />
                    <a class="btn btn-dark" asp-action="Index">Back to List</a>
                </div>
            </form>
        </div>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
