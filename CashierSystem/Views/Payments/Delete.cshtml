@model CashierSystem.Models.Payment

@{
    ViewData["Title"] = "Delete";
}


<div class="card">
    <div class="card-header">
       <h1 class="text-center pb-3">Payment</h1>
       <h4 class="text-center pb-3">Delete</h4>
       <h3 class="text-center pb-3">Are you sure you want to delete this?</h3>
    </div>
    <dl class="row card-body">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Amount)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Amount)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.PaidAt)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PaidAt)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.PaymentType)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PaymentType.TypeName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Sale)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Sale.SaleDate)
        </dd>
    </dl>
    <form asp-action="Delete" class="card-header">
        <input type="hidden" asp-for="PaymentId" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a class="btn btn-dark" asp-action="Index">Back to List</a>
    </form>
</div>
