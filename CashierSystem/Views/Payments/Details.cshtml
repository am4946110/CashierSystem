@model CashierSystem.Models.Payment

@{
    ViewData["Title"] = "Details";
}


<div class="card">
    <div class="card-header">
        <h1 class="text-center pb-3">Payment</h1>
        <h4 class="text-center pb-3">Details</h4>
    </div>
    <dl class="row card-body">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Amount)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Amount)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.PaidAt)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PaidAt)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.PaymentType)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PaymentType.TypeName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Sale)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Sale.SaleDate)
        </dd>
    </dl>
    <div class="card-footer">
        <a class="btn btn-warning" asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
        <a class="btn btn-dark" asp-action="Index">Back to List</a>
    </div>
</div>
