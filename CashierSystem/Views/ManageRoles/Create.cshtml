@model ViewModels.RoleModel

@{
    string[] Roles = { "Admin", "HR Manager", "Department Manager", "Payroll Officer", "Employee", "Recruiter" };
    ViewData["Title"] = "Create";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-6">
            <div class="card shadow-lg border-0 rounded-4">
                <div class="card-header bg-primary text-white text-center fs-4 fw-bold rounded-top-4">
                    <i class="fa-solid fa-user-shield me-2"></i> Create Role
                </div>
                <div class="card-body p-4">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                        <div class="mb-3">
                            <label asp-for="Name" class="form-label fw-semibold"></label>
                            <select asp-for="Name" class="form-select shadow-sm">
                                <option value="">-- Select a Role --</option>
                                @foreach (var item in Roles)
                                {
                                    <option value="@item">@item</option>
                                }
                            </select>
                            <span asp-validation-for="Name" class="text-danger small"></span>
                        </div>
                        <div class="d-flex justify-content-between mt-4">
                            <a class="btn btn-outline-secondary px-4" asp-action="Index">
                                <i class="fa-solid fa-arrow-left me-1"></i> Back
                            </a>
                            <button type="submit" class="btn btn-primary px-4 fw-semibold">
                                <i class="fa-solid fa-plus me-1"></i> Create
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
