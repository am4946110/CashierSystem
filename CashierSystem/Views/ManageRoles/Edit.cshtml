@model MyRole

@{

    string[] Roles = {"Admin","HR Manager","Department Manager","Payroll Officer","Employee","Recruiter"};
    ViewData["Title"] = "Edit";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-7">
            <div class="card shadow-lg border-0 rounded-4">
                <div class="card-header bg-warning text-dark text-center fs-4 fw-bold rounded-top-4">
                    <i class="fa-solid fa-pen-to-square me-2"></i> Edit Role
                </div>
                <div class="card-body p-4">
                    <form asp-action="Edit">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                        <input type="hidden" asp-for="Id" />
                        <div class="mb-3">
                            <label asp-for="Name" class="form-label fw-semibold"></label>
                            <select asp-for="Name" id="RoleModelSelect" class="form-select shadow-sm">
                                @foreach(var item in Roles)
                                {
                                    <option value="@Roles">@Roles</option>
                                }
                            </select>
                            <span asp-validation-for="Name" class="text-danger small"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="NormalizedName" class="form-label fw-semibold"></label>
                            <input asp-for="NormalizedName" class="form-control shadow-sm" />
                            <span asp-validation-for="NormalizedName" class="text-danger small"></span>
                        </div>
                        <input asp-for="ConcurrencyStamp" type="hidden" />
                        <div class="d-flex justify-content-between mt-4">
                            <a class="btn btn-outline-secondary px-4" asp-action="Index">
                                <i class="fa-solid fa-arrow-left me-1"></i> Back
                            </a>
                            <button type="submit" class="btn btn-warning px-4 text-white fw-semibold">
                                <i class="fa-solid fa-save me-1"></i> Save
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
