@model CashierSystem.Models.Category

@{
    ViewData["Title"] = "Details";
}


<div class="card">
    <div class="card-header">  
        <h1 class="text-center pb-3">Category</h1>
        <h4 class="text-center pb-3">Details</h4>
    </div>
    <dl class="row card-body">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CategoryName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CategoryName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
    </dl>
    <div class="card-footer">
        <a class="btn btn-danger" asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
        <a class="btn btn-dark" asp-action="Index">Back to List</a>
    </div>
</div>
