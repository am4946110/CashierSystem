@model MyUser

@{
    ViewData["Title"] = "Delete";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-7">
            <div class="card shadow-lg border-0 rounded-4">
                <div class="card-header bg-danger text-white text-center fs-4 fw-bold rounded-top-4">
                    <i class="fa-solid fa-triangle-exclamation me-2"></i> Delete User
                </div>
                <div class="card-body p-4">
                    <h5 class="text-center text-danger mb-4">
                        Are you sure you want to delete this user?
                    </h5>
                    <dl class="row">
                        <dt class="col-sm-3 fw-semibold">@Html.DisplayNameFor(model => model.UserName)</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.UserName)</dd>
                        <dt class="col-sm-3 fw-semibold">@Html.DisplayNameFor(model => model.Email)</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.Email)</dd>
                    </dl>

                    <form asp-action="DeleteConfirmed" method="post">
                        <input type="hidden" asp-for="Id" />
                        <button type="submit" class="btn btn-danger">Delete</button> |
                        <a class="btn btn-primary" asp-action="Index">Back to List</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
