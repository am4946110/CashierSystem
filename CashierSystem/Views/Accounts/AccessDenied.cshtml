@{
    ViewData["Title"] = "Access Denided";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-7">
            <div class="card shadow-lg border-0 rounded-4">
                <div class="card-header bg-danger text-white text-center fs-3 fw-bold rounded-top-4">
                    <i class="fa-solid fa-ban me-2"></i> Access Denied
                </div>
                <div class="card-body text-center p-5">
                    <h4 class="text-danger fw-semibold mb-4">
                        <i class="fa-solid fa-lock me-2"></i> You are not allowed to visit this page
                    </h4>
                    <p class="text-muted mb-5">
                        If you believe this is an error, please contact the system administrator.
                    </p>
                    <div class="d-flex justify-content-center gap-3">
                        <a asp-controller="Home" asp-action="Index" class="btn btn-outline-primary px-4">
                            <i class="fa-solid fa-house me-1"></i> Back to Main Page
                        </a>
                        <a asp-controller="Accounts" asp-action="Logout" class="btn btn-outline-warning px-4">
                            <i class="fa-solid fa-right-from-bracket me-1"></i> Logout
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

