@model CashierSystem.Models.Sale

@{
    ViewData["Title"] = "Create";
}

<div class="card">
    <div class="card-header">
        <h1 class="text-center pb-3">Sales</h1>
        <h4 class="text-center pb-3">Create</h4>
    </div>
    <div ng-app="" class="row card-body justify-content-center">
        <div class="col-md-4">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group mb-3">
                    <label asp-for="CustomerId" class="control-label"></label>
                    <select asp-for="CustomerId" class ="form-control" asp-items="ViewBag.CustomerId"></select>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="UserId" class="control-label"></label>
                    <select asp-for="UserId" class="form-control" asp-items="ViewBag.Message"></select>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="Discount" class="control-label"></label>
                    <input asp-for="Discount" ng-model="Discount" class="form-control" />
                    <span asp-validation-for="Discount" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="TotalAmount" class="control-label"></label>
                    <input asp-for="TotalAmount" ng-model="TotalAmount" class="form-control" />
                    <span asp-validation-for="TotalAmount" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="NetAmount" class="control-label"></label>
                    <input asp-for="NetAmount" value="{{TotalAmount * Discount || 0 }}" readonly class="form-control" />
                    <span asp-validation-for="NetAmount" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <input type="submit" value="Create" class="btn btn-primary" />
                    <a class="btn btn-dark" asp-action="Index">Back to List</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
