        <dt class="col-sm-3">@Html.DisplayNameFor(model => model.TotalSpent)</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.TotalSpent)</dd>

        <dt class="col-sm-3">@Html.DisplayNameFor(model => model.FirstPurchase)</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.FirstPurchase)</dd>

