@model CashierSystem.Models.Customer

@{
    ViewData["Title"] = "Delete";
}


<div class="card">
    <div class="card-header">
        <h1 class="text-center pb-3">Customer</h1>
        <h4 class="text-center pb-3">Delete</h4>
        <h3 class="text-center pb-3">Are you sure you want to delete this?</h3>
    </div>
    <dl class="row card-body">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.FullName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FullName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Phone)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Phone)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Email)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Address)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Address)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DateBecameCustomer)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DateBecameCustomer)
        </dd>
    </dl>
    <form asp-action="Delete" class="card-footer">
        <input type="hidden" asp-for="CustomerId" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a class="btn btn-dark" asp-action="Index">Back to List</a>
    </form>
</div>
