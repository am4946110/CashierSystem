@model CashierSystem.Models.Supplier

@{
    ViewData["Title"] = "Delete";
}


<div class="card justify-content-center">
    <div class="card-header justify-content-center">
        <h1 class="text-center pb-3">Supplier</h1>
        <h4 class="text-center pb-3">Delete</h4>
        <h3 class="text-center pb-3">Are you sure you want to delete this?</h3> 
    </div>
    <dl class="row card-body justify-content-center">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.SupplierName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.SupplierName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Phone)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Phone)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Email)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Address)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Address)
        </dd>
    </dl>
    <div class="card-footer justify-content-center">
        <form asp-action="Delete">
            <input type="hidden" asp-for="SupplierId" />
            <input type="submit" value="Delete" class="btn btn-danger" /> 
            <a class="btn btn-dark" asp-action="Index">Back to List</a>
        </form>
    </div>
</div>
