@model IEnumerable<CashierSystem.Models.Supplier>

@{
    ViewData["Title"] = "Supplier";
}

<h1 class="pb-3 text-center">Supplier</h1>

<p class="pb-2">
    <a class="btn btn-success" asp-action="Create">Create New</a>
</p>

<div class="table-responsive mt-2">
    <table class="table align-middle table-hover">
        <thead class="table-warning">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.SupplierName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Phone)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Email)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Address)
                </th>
                <th>Edit</th>
                <th>Details</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
    @foreach (var item in Model) {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.SupplierName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Phone)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Address)
                </td>
                <td>
                    <a class="btn btn-dark" asp-action="Edit" asp-route-id="@item.SupplierId">Edit</a> 
                </td>
                <td>
                    <a class="btn btn-warning" asp-action="Details" asp-route-id="@item.SupplierId">Details</a>
                </td>
                <td>
                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.SupplierId">Delete</a>
                </td>
            </tr>
    }
        </tbody>
    </table>
</div>
